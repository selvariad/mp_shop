{
	"easycom": {
		"^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "主页"
			}
		},
		{
			"path": "pages/center/index",
			"style": {
				"navigationBarTitleText": "个人中心"
			}
		}, {
			"path": "pages/center/baseInfo",
			"style": {
				"navigationBarTitleText": "个人设置"
			}
		}, {
			"path": "pages/center/orderList",
			"style": {
				"navigationBarTitleText": "订单列表"
			}
		},{
			"path": "pages/center/orderDetail",
			"style": {
				"navigationBarTitleText": "订单详细信息"
			}
		},
		{
			"path": "pages/center/address",
			"style": {
				"navigationBarTitleText": "地址列表"
			}
		},
		{
			"path": "pages/center/addSite",
			"style": {
				"navigationBarTitleText": "新建收货地址"
			}
		},
		{
			"path": "pages/center/editAddress",
			"style": {
				"navigationBarTitleText": "编辑收货地址"
			}
		},
		{
			"path": "pages/cart/cart",
			"style": {
				"navigationBarTitleText": "购物车",
				"enablePullDownRefresh": false
			}

		},
		{
			"path": "pages/cart/order",
			"style": {
				"navigationBarTitleText": "订单结算",
				"enablePullDownRefresh": false
			}

		},
		{
			"path": "pages/goods/goods",
			"style": {
				"navigationBarTitleText": "商品列表",
				"enablePullDownRefresh": false
			}

		},
		{
			"path": "pages/goods/goodsInfo",
			"style": {
				"navigationBarTitleText": "商品信息",
				"enablePullDownRefresh": false
			}

		},
		{
			"path": "pages/auth/login",
			"style": {
				"navigationBarTitleText": "登录"
			}
		},
		{
			"path": "pages/auth/register",
			"style": {
				"navigationBarTitleText": "注册"
			}
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uView",
		"navigationBarBackgroundColor": "#FFFFFF",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		"color": "#000000",
		"selectedColor": "#1296db",
		"borderStyle": "black",
		"backgroundColor": "#ffffff",
		"list": [{
				"pagePath": "pages/index/index",
				"iconPath": "static/home.png",
				"selectedIconPath": "static/homea.png",
				"text": "首页"
			},
			{
				"pagePath": "pages/goods/goods",
				"iconPath": "static/other.png",
				"selectedIconPath": "static/othera.png",
				"text": "商品"
			},
			{
				"pagePath": "pages/cart/cart",
				"iconPath": "static/cart.png",
				"selectedIconPath": "static/carta%20.png",
				"text": "购物车"
			}, {
				"pagePath": "pages/center/index",
				"iconPath": "static/user.png",
				"selectedIconPath": "static/usera.png",
				"text": "我的"
			}
		]
